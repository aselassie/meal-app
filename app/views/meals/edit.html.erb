<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-3" style="font-family: courier;">
      <h3>Edit a meal</h3>
      <%= simple_form_for(@meal) do |f| %>
        <%= f.input :name, label: 'Meal' %>
        <%= f.input :description %>
        <%= f.input :category %>
        <%= f.input :price %>
        <%= f.input :city %>
        <%= f.submit "Save Meal", class: "btn btn-outline-dark" %> <%= link_to "Back to meals", meals_path, class: "btn btn-outline-dark" %>
      <% end %>
    </div>
  </div>
</div>
