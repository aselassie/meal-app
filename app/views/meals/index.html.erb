<div class="container">
<div class="row">
  <% @meals.each do |meal| %>

    <div class="col-12 col-md-6 col-lg-4">
      <div class="card" >
          <%= link_to meal_path(meal), class: "btn btn-light" do %>
            <p><%= meal.name.capitalize %></p>
            <p> <%= meal.description.capitalize %></p>
            <p><%= meal.category.capitalize %></p>
            <p><i class="fas fa-euro-sign"></i> <%= meal.price %></p>
            <p><%= meal.city.capitalize %></p>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'Create new meal', new_meal_path, class: "btn btn-outline-dark"%>

